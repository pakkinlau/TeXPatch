{
  "name": "texpatch-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:core": "npm --workspace packages/core run build",
    "build:ext": "npm --workspace packages/extension run build",
    "release:core": "npm --workspace packages/core publish --access public",
    "clip": "node packages/clip/bin/texpatch-clip.mjs",
    "ext:icons": "node scripts/build-icons.js",
    "ext:zip": "bestzip texpatch-extension.zip extension/* extension/icons/*",
    "ext:build": "npm run ext:icons && npm run ext:zip",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "typecheck": "npm --workspace packages/core run build --silent && npm --workspace packages/extension run build --silent"
  },
  "devDependencies": {
    "bestzip": "^2.2.1",
    "prettier": "3.3.3",
    "sharp": "^0.33.5"
  }
}
