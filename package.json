{
  "name": "texpatch-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:core": "npm -w texpatch-core run build",
    "build:ext": "npm -w texpatch-extension run build",
    "release:core": "npm -w texpatch-core publish --access public",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "typecheck": "npm -w texpatch-core run build --silent && npm -w texpatch-extension run build --silent"
  },
  "devDependencies": {
    "prettier": "3.3.3"
  }
}
